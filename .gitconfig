[pull]
	rebase = true
[merge]
	tool = nvimdiff4
[diff]
	tool = nvimdiff4
[color]
	diff   = auto
	status = auto
	branch = auto
[alias]
	co = checkout
	chp = cherry-pick
	st = status
	br = branch
	l  = log -n 10 --format=format:'%C(blue)%h%C(white) %C(240)- %C(white)%s%C(240) ... %an, %ad' --graph --date=short
	ll = log --date=short --format=format:'%C(blue)%h%C(white) %C(240)- %C(white)%s%C(240) ... %an, %ad' --graph
[push]
	default = current
[fetch]
	prune = true
[core]
	excludesFile = ~/.gitignore_global

; specific settings (e.g. nvim bin location, work user email)
[include]
	path = ~/.gitconfig.local
